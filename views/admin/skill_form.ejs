<%- include('../partials/header', { title: item.id ? 'Edit Skill' : 'New Skill' }) %>

<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="bg-white p-10 rounded-2xl shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-heading font-bold text-indigo-700 mb-8 text-center">
      <%= item.id ? 'Edit Skill' : 'New Skill' %>
    </h2>

    <form action="<%= action %>" method="POST" class="space-y-6">
      <% if (action.includes('_method=PUT')) { %>
        <input type="hidden" name="_method" value="PUT">
      <% } %>

      <div>
        <label for="name" class="block text-gray-700 mb-1">Skill Name</label>
        <input
          id="name"
          name="name"
          type="text"
          required
          value="<%= item.name||'' %>"
          class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
        />
      </div>

      <div>
        <label for="level" class="block text-gray-700 mb-1">Proficiency (%)</label>
        <input
          id="level"
          name="level"
          type="number"
          min="0"
          max="100"
          required
          value="<%= item.level||0 %>"
          class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
        />
      </div>

      <div class="flex justify-end space-x-3 pt-4">
        <a
          href="/secret-admin-123/skills"
          class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition"
        >
          Cancel
        </a>
        <button
          type="submit"
          class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition"
        >
          Save
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
