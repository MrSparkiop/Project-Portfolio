<%- include('../partials/header', { title: 'Admin Login', user: false }) %>

<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-heading font-semibold text-center mb-6 text-primary">Admin Login</h2>
    <form action="/admin/login" method="POST" class="space-y-5">
      <div>
        <label for="username" class="block text-gray-700 mb-1">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
        />
      </div>
      <div>
        <label for="password" class="block text-gray-700 mb-1">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
        />
      </div>
      <button
        type="submit"
        class="w-full bg-primary text-white font-medium rounded-lg py-2 hover:bg-indigo-700 transition"
      >
        Log In
      </button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
