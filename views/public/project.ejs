<%- include('../partials/header', { title: project.title }) %>

<section class="max-w-3xl mx-auto bg-white rounded-xl shadow p-8 my-16">
  <h1 class="text-4xl font-heading font-bold text-indigo-600 mb-4">
    <%= project.title %>
  </h1>
  <p class="text-gray-700 mb-6"><%= project.description %></p>

  <div class="flex flex-wrap gap-4">
    <% if (project.url) { %>
      <!-- Solid indigo button by default -->
      <a
        href="<%= project.url %>"
        target="_blank"
        class="inline-block bg-indigo-600 text-white px-5 py-3 rounded-lg shadow hover:bg-indigo-700 transition"
      >
        Visit Live Site
      </a>
    <% } %>

    <!-- Back Home as neutral button -->
    <a
      href="/"
      class="inline-block bg-gray-200 text-gray-800 px-5 py-3 rounded-lg shadow hover:bg-gray-300 transition"
    >
      ‚Üê Back to Home
    </a>
  </div>
</section>

<%- include('../partials/footer') %>
