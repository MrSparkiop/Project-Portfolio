<%- include('../partials/header', { title: 'Home' }) %>

<!-- Hero / About Section -->
<section
  id="hero"
  class="flex flex-col-reverse md:flex-row items-center gap-8 py-16"
>
  <!-- Text & Buttons -->
  <div class="flex-1 text-center md:text-left space-y-6">
    <h1 class="text-5xl md:text-6xl font-heading font-bold text-indigo-700">
      Your Name
    </h1>
    <p class="text-lg text-gray-600">
      Full-Stack Developer specializing in Node.js & Tailwind CSS.
    </p>
    <div class="flex flex-col sm:flex-row justify-center md:justify-start gap-4">
      <a
        href="/resume.pdf"
        download
        class="bg-emerald-500 text-white px-6 py-3 rounded-lg shadow hover:bg-emerald-600 transition"
      >
        Download Résumé
      </a>
      <a
        href="#projects"
        class="bg-indigo-600 text-white px-6 py-3 rounded-lg shadow hover:bg-indigo-700 transition"
      >
        View Projects
      </a>
    </div>
  </div>

  <!-- Profile Photo -->
  <div class="flex-1 flex justify-center md:justify-end">
    <img
      src="/images/profile.jpg"
      alt="Your Name"
      class="w-48 h-48 md:w-64 md:h-64 rounded-full object-cover shadow-lg"
    />
  </div>
</section>

<!-- Skills & Tech Stack (dynamic from DB) -->
<section id="skills" class="mb-16">
  <h2 class="text-3xl font-heading font-semibold text-indigo-700 mb-8 text-center">
    Skills & Tech Stack
  </h2>

  <div class="space-y-6 max-w-xl mx-auto mb-12">
    <% skills.forEach(s => { %>
      <div>
        <div class="flex justify-between mb-1">
          <span class="font-medium text-gray-800"><%= s.name %></span>
          <span class="text-gray-600"><%= s.level %>%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-4">
          <div
            class="bg-emerald-500 h-4 rounded-full"
            style="width:<%= s.level %>%"
          ></div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<!-- Projects Section -->
<section id="projects" class="mb-16">
  <h2 class="text-3xl font-heading font-semibold text-indigo-700 mb-6 text-center">
    Projects
  </h2>
  <div class="grid gap-8 md:grid-cols-2">
    <% projects.forEach(p => { %>
      <div class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition">
        <h3 class="text-2xl font-heading font-semibold text-indigo-600 mb-3">
          <%= p.title %>
        </h3>
        <p class="text-gray-700 mb-5"><%= p.description %></p>
        <a
          href="/projects/<%= p.id %>"
          class="inline-block bg-emerald-500 text-white px-4 py-2 rounded-lg hover:bg-emerald-600 transition"
        >
          View Project
        </a>
      </div>
    <% }) %>
  </div>
</section>

<!-- Experience Section -->
<section class="mb-20">
  <h2 class="text-3xl font-heading font-semibold text-indigo-700 mb-6 text-center">
    Experience
  </h2>
  <ul class="space-y-8 max-w-3xl mx-auto">
    <% experiences.forEach(e => { %>
      <li class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition">
        <div class="flex justify-between items-center mb-2">
          <h3 class="text-xl font-heading font-semibold text-indigo-600">
            <%= e.role %> @ <%= e.company %>
          </h3>
          <span class="text-gray-500 text-sm">
            <%= e.startDate %> – <%= e.endDate || 'Present' %>
          </span>
        </div>
        <p class="text-gray-700"><%= e.description %></p>
      </li>
    <% }) %>
  </ul>
</section>

<%- include('../partials/footer') %>
