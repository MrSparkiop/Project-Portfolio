<%- include('../partials/header', { title, includeAOS: false }) %>
<div class="py-8 bg-gray-50 min-h-screen">
  <div class="max-w-4xl mx-auto px-4">
    <h2 class="text-3xl font-semibold mb-6">Contact Messages</h2>
    <% if (items.length) { %>
      <ul class="space-y-4">
        <% items.forEach(msg => { %>
          <li class="bg-white p-4 rounded shadow flex justify-between items-center">
            <div>
              <strong><%= msg.name %></strong> (<%= msg.email %>)<br/>
              <small class="text-gray-500"><%= msg.createdAt.toLocaleString() %></small>
            </div>
            <div class="space-x-2">
              <a href="/secret-admin-123/messages/<%= msg.id %>"
                 class="text-indigo-600 hover:underline">View</a>
              <form action="/secret-admin-123/messages/<%= msg.id %>?_method=DELETE"
                    method="POST" class="inline">
                <button type="submit"
                        class="text-red-600 hover:underline"
                        onclick="return confirm('Delete this message?');">
                  Delete
                </button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="text-gray-500">No messages yet.</p>
    <% } %>
  </div>
</div>
<%- include('../partials/footer') %>
