<%- include('../partials/header', { title, includeAOS: false }) %>
<div class="py-8 bg-gray-50 min-h-screen">
  <div class="max-w-2xl mx-auto px-4 bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-semibold mb-4">Message from <%= item.name %></h2>
    <p><strong>Email:</strong> <%= item.email %></p>
    <p class="mt-4 whitespace-pre-wrap"><%= item.message %></p>
    <p class="mt-4 text-gray-500"><small>Sent at <%= item.createdAt.toLocaleString() %></small></p>
    <div class="mt-6 space-x-4">
      <a href="/secret-admin-123/messages" class="text-indigo-600 hover:underline">Back</a>
      <form action="/secret-admin-123/messages/<%= item.id %>?_method=DELETE" method="POST" class="inline">
        <button type="submit" class="text-red-600 hover:underline">Delete</button>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
