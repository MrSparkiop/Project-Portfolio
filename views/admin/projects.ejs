<%- include('../partials/header', { title: 'Projects' }) %>

<div class="py-8 bg-gray-50 min-h-screen">
  <div class="max-w-4xl mx-auto px-4">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-heading font-semibold text-indigo-700">Projects</h2>

      <!-- bright New-project button -->
      <a href="/secret-admin-123/projects/new"
         class="bg-indigo-600 text-white px-4 py-2 rounded-lg shadow hover:bg-indigo-700 transition">
        + New Project
      </a>
    </div>

    <% if (items.length) { %>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% items.forEach(p => { %>
          <div class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition flex flex-col justify-between">
            <div>
              <h3 class="text-xl font-heading font-semibold text-indigo-600 mb-2"><%= p.title %></h3>
              <p class="text-gray-700 mb-4"><%= p.description.length>100? p.description.slice(0,100)+'â€¦' : p.description %></p>
            </div>

            <div class="flex space-x-2">
              <!-- Edit -->
              <a href="/secret-admin-123/projects/<%= p.id %>/edit"
                 class="flex-1 text-center bg-emerald-500 text-white py-1 rounded-lg hover:bg-emerald-600 transition">
                Edit
              </a>
              <!-- Delete -->
              <form action="/secret-admin-123/projects/<%= p.id %>?_method=DELETE"
                    method="POST" onsubmit="return confirm('Delete this project?');" class="flex-1">
                <button type="submit"
                        class="w-full bg-rose-500 text-white py-1 rounded-lg hover:bg-rose-600 transition">
                  Delete
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center py-16">
        <p class="text-gray-500 mb-4">No projects yet.</p>
        <a href="/secret-admin-123/projects/new"
           class="bg-indigo-600 text-white px-4 py-2 rounded-lg shadow hover:bg-indigo-700 transition">
          Add Your First Project
        </a>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
