<%- include('../partials/header', { title: 'Home' }) %>

<!-- Hero / intro -->
<section class="text-center mb-16">
  <h1 class="text-5xl font-heading font-bold text-indigo-700 mb-2">
    Your Name
  </h1>
  <p class="text-lg text-gray-600">
    A short bio that highlights your expertise and passions.
  </p>
</section>

<!-- Projects -->
<section class="mb-16">
  <h2 class="text-3xl font-heading font-semibold text-indigo-700 mb-6">
    Projects
  </h2>

  <div class="grid gap-8 md:grid-cols-2">
    <% projects.forEach(p => { %>
      <div class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition">
        <h3 class="text-2xl font-heading font-semibold text-indigo-600 mb-3">
          <%= p.title %>
        </h3>
        <p class="text-gray-700 mb-5"><%= p.description %></p>

        <% if (p.url) { %>
          <a
            href="<%= p.url %>"
            class="inline-block bg-emerald-500 text-white px-4 py-2 rounded-lg shadow hover:bg-emerald-600 transition"
          >
            View Project
          </a>
        <% } %>
      </div>
    <% }) %>
  </div>
</section>

<!-- Experience -->
<section class="mb-20">
  <h2 class="text-3xl font-heading font-semibold text-indigo-700 mb-6">
    Experience
  </h2>

  <ul class="space-y-8">
    <% experiences.forEach(e => { %>
      <li class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition">
        <div class="flex justify-between items-center mb-2">
          <h3 class="text-xl font-heading font-semibold text-indigo-600">
            <%= e.role %> @ <%= e.company %>
          </h3>
          <span class="text-gray-500 text-sm">
            <%= e.startDate %> â€“ <%= e.endDate || 'Present' %>
          </span>
        </div>
        <p class="text-gray-700"><%= e.description %></p>
      </li>
    <% }) %>
  </ul>
</section>

<%- include('../partials/footer') %>
