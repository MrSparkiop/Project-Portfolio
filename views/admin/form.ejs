<%- include('../partials/header', { title: item.id ? `Edit ${type}` : `New ${type}` }) %>

<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="bg-white p-10 rounded-2xl shadow-lg w-full max-w-lg">
    <h2 class="text-2xl font-heading font-bold text-indigo-700 mb-8 text-center">
      <%= item.id ? `Edit ${type}` : `New ${type}` %>
    </h2>

    <form action="<%= action %>" method="POST" class="space-y-6">
      <% if (action.includes('_method=PUT')) { %>
        <input type="hidden" name="_method" value="PUT">
      <% } %>

      <% if (type === 'Project') { %>
        <!-- Project: title, description, url -->
        <div>
          <label class="block text-gray-700 mb-1">Title</label>
          <input
            name="title"
            type="text"
            required
            value="<%= item.title || '' %>"
            class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
          />
        </div>
        <div>
          <label class="block text-gray-700 mb-1">Description</label>
          <textarea
            name="description"
            rows="4"
            required
            class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
          ><%= item.description || '' %></textarea>
        </div>
        <div>
          <label class="block text-gray-700 mb-1">URL</label>
          <input
            name="url"
            type="url"
            value="<%= item.url || '' %>"
            class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
          />
        </div>

      <% } else { %>
        <!-- Experience: role, company, startDate, endDate, description -->
        <div>
          <label class="block text-gray-700 mb-1">Role</label>
          <input
            name="role"
            type="text"
            required
            value="<%= item.role || '' %>"
            class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
          />
        </div>
        <div>
          <label class="block text-gray-700 mb-1">Company</label>
          <input
            name="company"
            type="text"
            required
            value="<%= item.company || '' %>"
            class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
          />
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-gray-700 mb-1">Start Date</label>
            <input
              name="startDate"
              type="date"
              required
              value="<%= item.startDate || '' %>"
              class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
          <div>
            <label class="block text-gray-700 mb-1">End Date</label>
            <input
              name="endDate"
              type="date"
              value="<%= item.endDate || '' %>"
              class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
        </div>
        <div>
          <label class="block text-gray-700 mb-1">Description</label>
          <textarea
            name="description"
            rows="4"
            required
            class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
          ><%= item.description || '' %></textarea>
        </div>
      <% } %>

      <!-- Form actions -->
      <div class="flex justify-end space-x-3 pt-4">
        <a
          href="/secret-admin-123/<%= type.toLowerCase() %>s"
          class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition"
        >
          Cancel
        </a>
        <button
          type="submit"
          class="px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition"
        >
          Save
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
