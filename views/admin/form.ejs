<%- include('../partials/header', { title: item.id ? 'Edit Project' : 'New Project' }) %>

<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="bg-white p-10 rounded-2xl shadow-lg w-full max-w-lg">
    <h2 class="text-2xl font-heading font-bold text-indigo-700 mb-8">
      <%= item.id ? 'Edit Project' : 'New Project' %>
    </h2>

    <form action="<%= action %>" method="POST" class="space-y-6">
      <% if (action.includes('_method=PUT')) { %>
        <input type="hidden" name="_method" value="PUT">
      <% } %>

      <!-- Title -->
      <div>
        <label for="title" class="block text-gray-700 mb-1">Title</label>
        <input
          id="title"
          name="title"
          type="text"
          required
          value="<%= item.title || '' %>"
          class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
        />
      </div>

      <!-- Description -->
      <div>
        <label for="description" class="block text-gray-700 mb-1">Description</label>
        <textarea
          id="description"
          name="description"
          rows="4"
          required
          class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
        ><%= item.description || '' %></textarea>
      </div>

      <!-- URL -->
      <div>
        <label for="url" class="block text-gray-700 mb-1">URL</label>
        <input
          id="url"
          name="url"
          type="url"
          value="<%= item.url || '' %>"
          class="w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
        />
      </div>

      <!-- Buttons -->
      <div class="flex justify-end space-x-3 pt-4">
        <a
          href="/secret-admin-123/projects"
          class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition"
        >
          Cancel
        </a>

        <!-- **Save button restored here** -->
        <button
          type="submit"
          class="px-6 py-2 bg-indigo-600 text-white font-medium rounded-lg shadow hover:bg-indigo-700 transition"
        >
          Save
        </button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
